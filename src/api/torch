-- configuration
local enableTorches = 1
local torchSlot = 16

-- enables or disables placing of torches
function setEnabled(enable)
    enableTorches = enable
end

-- set the torch slot
function setSlot(slot)
    torchSlot = slot
end

-- checks the torch storage
local function check()
    if turtle.getItemCount(torchSlot) == 0 then
        print(l10n_torch.t_errorNoTorches)
        local event = os.pullEvent('key')
        check()
    end
end

-- places a torch
function place(placeUp)
    if enableTorches == 1 then
        check()
        turtle.select(torchSlot)
        if placeUp then
            turtle.placeUp()
        else
            turtle.placeDown()
        end
    end
end

-- load localization
l10n.load('torch')
